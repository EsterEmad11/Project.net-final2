@model Book


<div class="alert alert-success" role="alert">
    <h4>Add Book</h4>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="form-group mt-3">
        <label asp-for="title" class="form-label"></label>
        <input asp-for="title" class="form-control" />
        <span asp-validation-for="title" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

   @*  <div>
        <input type="file" asp-for="clientFile" onchange="loadFile(event)" />
        <img id="img" height="200" />
    </div> *@

    <div class="form-group">
        <label asp-for="clientFile"></label>
        <input asp-for="clientFile" type="file" class="form-control" />
        <span asp-validation-for="clientFile" class="text-danger"></span>
    </div>

    

    <div class="form-group mt-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-items="ViewBag.Categories" asp-for="CategoryId" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="my-4">
        <input type="submit" name="name" value="Add Book" class="btn btn-success mx-2" />
        <a href="~/Book/Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script>
     var loadFile = function (event) {
         var reader = new FileReader();
         reader.onload = function () {
             var Img = document.getElementById("img");
             Img.src = reader.result;
         }
         reader.readAsDataURL(event.target.files[0]);
     }
 </script> 
}
