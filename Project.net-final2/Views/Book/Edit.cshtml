@model Book

<div class="alert alert-success" role="alert">
    <h4>Edit Book</h4>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="BookId" />

    <div class="form-group mt-3">
        <label asp-for="title" class="form-label"></label>
        <input asp-for="title" class="form-control" />
        <span asp-validation-for="title" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        @if (Model.ImagePath != null)
        {
            <label asp-for="clientFile"></label>
            <input asp-for="clientFile" type="file" class="form-control" value="@Model.ImagePath" />
            <img src="@Model.ImagePath" alt="Current Image" width="100" />
            <span asp-validation-for="clientFile" class="text-danger"></span>

        }
        else
        {
            <label asp-for="clientFile"></label>
            <input asp-for="clientFile" type="file" class="form-control" />
            <span asp-validation-for="clientFile" class="text-danger"></span>
            
        }
        

        
    </div>

    

    <div class="form-group mt-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-items="ViewBag.Categories" asp-for="CategoryId" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="my-4">
        <input type="submit" name="name" value="Edit Book" class="btn btn-success mx-2" />
        <a href="~/Book/Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
