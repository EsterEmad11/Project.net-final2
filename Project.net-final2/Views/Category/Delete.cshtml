@model Category
@{
    Layout = "_Layout_New1";

}


<div class="alert alert-danger" role="alert">
    <h4>Delete Category</h4>
    <h6>Are you sure you want to delete this Department?</h6>
</div>
<div class="row">
    <div class="col-2">
        <h5>Name:</h5>
    </div>
    <div class="col-10"><h5>@Model.Name</h5></div>
</div>

<hr />

<div class="row">
    <div class="col-2">
        <h5>With ID:</h5>
    </div>
    <div class="col-10"><h5>@Model.Id</h5></div>
</div>


<hr />

<div class="row">
    <div class="col-2">
        <h5>Description:</h5>
    </div>
    <div class="col-10"><h5>@Model.Description</h5></div>
</div>

<hr />

<form action="~/Category/Delete/@Model.Id" method="post">
    <input type="hidden" name="confirm" value="yes" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="~/Category/Index" class="btn btn-secondary">Cancel</a>
</form>

